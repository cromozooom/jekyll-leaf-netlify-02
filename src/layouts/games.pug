extends default	
block content
	hr
	h2 Games list
	ul.d-flex.flex-wrap.list-unstyled
		| {% for game in site.games limit:10 %}
		li.equalHW.d-flex.flex-column.px-card
			.m-2.px-rounded
				a.mx-auto(href="{{game.url}}")
					img(src="{{game.image}}" title=" play {{ game.title }}")
				h3.text-center.m-2: small {{ game.title | capitalize }}
		| {% endfor %}